%% SRSActor

\define@key{SRSActor}{title}[Título del actor en blanco]{\def\KV@SRSActor@title@value{#1}}
\define@key{SRSActor}{label}[etiqueta-del-actor-en-blanco]{\def\KV@SRSActor@label@value{#1}}
\define@key{SRSActor}{desc}[Descripción del actor en blanco]{\def\KV@SRSActor@desc@value{#1}}
\define@key{SRSActor}{comments}[Comentarios del actor en blanco]{\def\KV@SRSActor@comments@value{#1}}
\define@key{SRSActor}{stability}[Alta]{\def\KV@SRSActor@stability@value{#1}}
\newcommand{\SRSActor}[1]{%
  \setkeys{SRSActor}{#1}
  \refstepcounter{SRSActor}
  \par
  \begin{tabular}{p{0.15\textwidth}p{0.77\textwidth}}
  \multicolumn{2}{l}{\label{SRSActor:\KV@SRSActor@label@value}\nombrebf{ACT-\padzeroes[2]{\decimal{SRSActor}}: \KV@SRSActor@title@value}} \\ \hline
  Descripción: & \KV@SRSActor@desc@value \\
  Comentarios: & \KV@SRSActor@comments@value \\
  Estabilidad: & \KV@SRSActor@stability@value
  \end{tabular}
  \addcontentsline{srsactors}{SRSActor}{\protect\makebox[3.5em][l]{\numberline{ACT-\padzeroes[2]{\decimal{SRSActor}}}} \KV@SRSActor@title@value}
}

\newcommand{\listSRSActorname}{Lista de actores}

\newlistof{SRSActor}{srsactors}{\listSRSActorname}

\newcommand{\refSRSActor}[1]{%
	\hyperref[SRSActor:#1]{ACT-\ref*{SRSActor:#1}}
}

